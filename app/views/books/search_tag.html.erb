<h2>Books search for "<%=@tag.name%>"</h2>
<table class="table">
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th>Tag</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= book.tags.map(&:name).join(', ') %>
        </td>
        <td id="favorite_buttons_<%= book.id %>">
           <%= render "favorites/favorite",book: book %>
        </td>
        <td>
          <p>コメント件数:<%= "#{book.book_comments.count}"  %></p>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>